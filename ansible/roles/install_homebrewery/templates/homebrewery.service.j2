[Unit]
Description=Homebrewery Server
After=network.target
Wants=caddy.service

[Service]
Type=simple

User=homebrew
Group=homebrew

Restart=on-failure
RestartSec=5

Environment=NODE_ENV=local
WorkingDirectory=/opt/homebrewery/
ExecStart=npm start

[Install]
WantedBy=multi-user.target
